{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier",
        "tslint-react-hooks"
    ],
    "rules": {
        "indent": [true, "spaces", 2],
        "interface-name": [true, "never-prefix"],
        "jsx-boolean-value": ["never"],
        "react-hooks-nesting": "error"
    }
}
